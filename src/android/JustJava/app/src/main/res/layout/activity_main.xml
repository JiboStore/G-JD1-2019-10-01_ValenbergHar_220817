<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:text="@string/text_quantity"
        android:id="@+id/text_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
         />

    <TextView
        android:text="@string/quantity"
        android:layout_below="@+id/text_quantity"
        android:textColor="#000000"
        android:id="@+id/quantity_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
         />

    <TextView
        android:id="@+id/price_text_view"
        android:layout_below="@+id/quantity_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:textColor="#000000"
        android:text="@string/price_text_view" />

    <Button
    android:id="@+id/increment_button"
    android:text="@string/increment_button"
    android:layout_below="@+id/price_text_view"
    android:layout_width="wrap_content"
    android:onClick="increment"
    android:layout_marginBottom="16dp"
    android:layout_height="wrap_content"
    />

    <Button
        android:id="@+id/decrement_button"
        android:text="@string/decrement_button"
        android:layout_below="@+id/increment_button"
        android:layout_width="wrap_content"
        android:onClick="decrement"
        android:layout_height="wrap_content"
        />

</RelativeLayout>