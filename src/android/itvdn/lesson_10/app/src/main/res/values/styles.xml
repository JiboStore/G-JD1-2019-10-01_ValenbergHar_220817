<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/darkPrimary</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="DetailField" parent="android:Widget.TextView">
        <item name="android:gravity">center_vertical</item>
        <item name="android:lineSpacingExtra">6dp</item>
        <item name="android:textColor">@color/primaryText</item>
    </style>

    <style name="HeaderTextView" parent="android:Widget.TextView">
        <item name="android:gravity">center_vertical</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/darkPrimary</item>
    </style>
    <style name="NoTittleBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/darkPrimary</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>
    <style name="GalleryTittleBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/trueBlack</item>
        <item name="colorPrimaryDark">@color/trueBlack</item>
    </style>
</resources>
